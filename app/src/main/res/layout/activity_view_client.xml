<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewClient">
  <LinearLayout
      android:orientation="vertical"
      android:background="@drawable/splash_gradient"
      android:layout_width="match_parent"
      android:layout_height="150dp">
      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tv_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:text="Full names"
                  android:textColor="#FFF"/>
              <TextView
                  android:id="@+id/tv_residence"
                  android:text="Residence"
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/tv_phone"
                  android:text="070212***"
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/tv_co"
                  android:text="insurance co."
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

          </LinearLayout>
          <LinearLayout
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tv_policy"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Policy Type"
                  android:textColor="#FFF"/>
              <TextView
                  android:id="@+id/tv_date"
                  android:text="Date"
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:text="(Policy purchase Date)"
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:text="insurance co."
                  android:textColor="#FFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

          </LinearLayout>



      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <android.support.v7.widget.AppCompatImageButton
              android:id="@+id/btn_phone"
              android:background="@null"
              android:layout_width="34dp"
              android:layout_height="34dp"
              android:layout_marginRight="40dp"
              android:src="@drawable/phone_plus"/>
          <android.support.v7.widget.AppCompatImageButton
              android:id="@+id/btn_sms"
              android:background="@null"
              android:layout_marginLeft="100dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/sms"/>
      </LinearLayout>

  </LinearLayout>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_detail"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_control_point_black_24dp" />

</LinearLayout>